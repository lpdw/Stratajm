{# Page d'affichage des jeux dans la partie publique #}

{% extends "CommonBundle::common-layout.html.twig" %}

{% block content %}

    <div id="main-div" class="row">
        <h2 id="pagetitle">Les jeux de Strata'j'm</h2>

        <div id="filter-panel" class="col-xs-3 col-sm-3 col-md-2">


        {{ form_start(searchForm, {'attr': {'class': 'form-inline'} }) }}
        {{ form_widget(searchForm) }}
        {{ form_end(searchForm) }}


        {{ form_start(sortForm) }}
        {{ form_widget(sortForm) }}
        {{ form_end(sortForm) }}


        </div>


        <div id="games-panel">
          <div id="loader" class="text-center">
            <img src="{{ asset('images/loader.gif') }}" alt="#" class="game-image">
          </div>
            {% for game in games %}

                <div class="game-sticker-info">
                  <div class="game-sticker thumbnail" href="#">
                      <a href="{{ path('single_game', { 'id': game.id }) }}">
                        <img src="{{ asset('uploads/images/' ~ game.image) }}" alt="Image du jeu {{ game.name }}" class="game-image">
                      </a>
                  </div>
                  <div class="game-sticker-name">{{ game.name }}</div>
                  <div class="game-sticker-rules">RÃ¨gles : {{ game.rules }}</div>
                  <div class="game-sticker-editor">Editeur : <a href="{{ game.publisher.url | external_link }}" >{{ game.publisher.name }} </a> </div>
                </div>
            {% endfor %}

        </div>


    </div>




{% endblock %}

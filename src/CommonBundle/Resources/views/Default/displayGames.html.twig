        <div id="games-panel" class="col-xs-7 col-sm-7 col-md-8">
            {% for game in games %}
                <a class="game-sticker thumbnail" href="#">
                    <img src="#" alt="#" class="game-image">
                    <div class="game-sticker-name">{{ game.name }}</div>
                    <div class="game-sticker-rules">Règles : {{ game.rules }}</div>
                    <div class="game-sticker-editor">Editeur : {{ game.publisher }} </div>
                </a>
            {% endfor %}
        </div>


    </div>



{% endblock %}

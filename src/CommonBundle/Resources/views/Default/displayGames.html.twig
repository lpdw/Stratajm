{# Page d'affichage des jeux dans la partie publique #}

{% extends "CommonBundle::common-layout.html.twig" %}

{% block content %}

    <div id="main-div" class="row">
        <h2 id="pagetitle">Les jeux de Strata'j'm</h2>

        <div id="filter-panel" class="col-xs-3 col-sm-3 col-md-4">
            <p>Critères</p>
            <p>Critères</p>
            <p>Critères</p>
            <p>Critères</p>
            <p>Critères</p>
            <p>Critères</p>
            <p>Critères</p>
        </div>

        <div id="games-panel">
            {% for game in games %}
                <div class="game-sticker thumbnail col-xs-2 col-sm-2 col-md-2" href="#">
                    <a href="{{ game.publisher.url | external_link }}" ><img src="#" alt="#" class="game-image"></a>
                </div>
                <div class="game-sticker-info">
                  <div class="game-sticker-name">{{ game.name }}</div>
                  <div class="game-sticker-rules">Règles : {{ game.rules }}</div>
                  <div class="game-sticker-editor">Editeur : {{ game.publisher.name }} </div>
                </div>
            {% endfor %}
        </div>


    </div>



{% endblock %}

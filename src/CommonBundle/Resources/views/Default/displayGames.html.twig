{# Page d'affichage des jeux dans la partie publique #}

{% extends "CommonBundle::common-layout.html.twig" %}

{% block content %}

    <div id="main-div">
        <h2 id="pagetitle">Les jeux de Strata'j'm</h2>

        <div id="filter-panel">


          {{ form_start(searchForm, {'attr': {'class': 'form-inline'} }) }}
          {{ form_widget(searchForm) }}
          {{ form_end(searchForm) }}


          {{ form_start(sortForm) }}
          {{ form_widget(sortForm) }}
          {{ form_end(sortForm) }}


        </div>


        <div id="games-panel">
          <div id="loader" class="text-center">
            <img src="{{ asset('images/loader.gif') }}" alt="#" class="game-image">
          </div>
            {% for game in games %}

                <div class="game-sticker">
                  <a href="{{ path('single_game', { 'id': game.id }) }}">
                    <img  class="game-sticker-image" src="{{ asset('uploads/images/' ~ game.image) }}" alt="Image du jeu {{ game.name }}">
                  </a>
                  <div class="game-sticker-info">
                    <div>{{ game.name }}</div>
                    <div>Editeur : <a href="{{ game.publisher.url | external_link }}" >{{ game.publisher.name }} </a> </div>
                  </div>

                </div>
            {% endfor %}

        </div>


    </div>




{% endblock %}

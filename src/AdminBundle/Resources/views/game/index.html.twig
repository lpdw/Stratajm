{% extends "AdminBundle::admin-layout.html.twig" %}

{% block content %}
    <h1>Games list</h1>

    <table class="table table-bordered table-responsive">
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Duration</th>
                <th>Age</th>
                <th>Rules</th>
                <th>Releasedate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for game in games %}
            <tr>
                <td><img style="width:30%;margin-left:35%;" src="{{ asset('uploads/images/' ~ game.image) }}"/></td>
                <td>{{ game.name }}</td>
                <td>{{ game.duration }}</td>
                <td>{{ game.age }}</td>
                <td>{{ game.rules }}</td>
                <td>{% if game.releaseDate %}{{ game.releaseDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_show', { 'id': game.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_edit', { 'id': game.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_new') }}">Create a new game</a>
        </li>
    </ul>
{% endblock %}

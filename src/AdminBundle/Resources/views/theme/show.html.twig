{% extends "AdminBundle::admin-layout.html.twig" %}

{% block content %}
    <h1>Theme</h1>

    <table class="table table-responsive">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ theme.name }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_theme_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_theme_edit', { 'id': theme.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

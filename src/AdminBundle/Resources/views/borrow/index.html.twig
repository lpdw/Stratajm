{% extends "AdminBundle::admin-layout.html.twig" %}

{% block content %}
    <h1>Emprunts en cours</h1>

    {% if borrowings == null %}
    <div>Aucun emprunt en cours.</div>

    {% else %}
      {% for borrowing in borrowings %}
      <li>
          {{ borrowing.copy.game.name }} (référence {{ borrowing.copy.reference }}) : emprunté par <a href="{{ path('admin_borrow_show', { 'id': borrowing.id }) }}">{{ borrowing.member.firstName }} {{borrowing.member.lastName}}</a> le {{borrowing.beginDate|date("m/d/Y", "Europe/Paris")}} <a href="{{ path('admin_borrow_edit', { 'id': borrowing.id }) }}">[Modifier]</a>
      </li>
      {% endfor %}
    {% endif %}

    <p><a href="{{ path('admin_borrow_new') }}">Déclarer un nouvel emprunt</a></p>
{% endblock %}

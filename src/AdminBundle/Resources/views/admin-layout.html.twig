{% extends '::base.html.twig' %}

{% block title %}Admin{% endblock %}
{% block head %}
    {% block stylesheets %}

        {{ parent() }}

        {% stylesheets

        '@AdminBundle/Resources/public/css/bootstrap-table.min.css'
                       '@AdminBundle/Resources/public/css/jasny-bootstrap.min.css'
        '@AdminBundle/Resources/public/css/navmenu-push.css'

        %}

        <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
    {% endblock %}
{% endblock %}
{% block body %}

    <div class="container-fluid">
    <nav id="myNavmenu" class="navmenu navmenu-default navmenu-fixed-left offcanvas" role="navigation">
        <a class="navmenu-brand" href="#">Espace Admininistration</a>

        <ul class="nav navmenu-nav">
            <li><a href="{{ path('admin_index') }}">Liste jeux</a></li>
            <li><a href="{{ path('admin_member_index') }}">Membres</a></li>
            {% if is_granted('ROLE_SUPER_ADMIN') %}
            <li><a href="{{ path('admin_user_index') }}">Administrateurs</a></li>
            {% endif %}
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Listes statiques<b class="caret"></b></a>
                <ul class="dropdown-menu navmenu-nav" role="menu">
                    <li><a href="{{ path('admin_theme_index') }}">Theme</a></li>
                    <li><a href="{{ path('admin_type_index') }}">Type</a></li>
                    <li><a href="{{ path('admin_publisher_index') }}">Éditeur</a></li>
                    <li><a href="{{ path('admin_status_index') }}">Statut jeu</a></li>
                    <li><a href="{{ path('admin_localisation_index') }}">Emplacement</a></li>
                    <li><a href="{{ path('admin_paymentmethod_index') }}">Moyen de paiement</a></li>
                </ul>
            </li>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <li><a href="/logout">Se déconnecter</a></li>
            {% endif %}
        </ul>
    </nav>
    <div class="navbar navbar-default navbar-fixed-top">
        <button type="button" class="navbar-toggle" data-toggle="offcanvas" data-target="#myNavmenu" data-canvas="body">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
    </div>
        <div class="col-lg-8 col-lg-offset-1">


    {% block content %}

    {% endblock %}
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {% javascripts '@AdminBundle/Resources/public/js/bootstrap-table.min.js'
                   '@AdminBundle/Resources/public/js/jasny-bootstrap.min.js'
                   '@AdminBundle/Resources/public/js/bootstrap-table-export.js'
                   '@AdminBundle/Resources/public/js/tableExport.js'
    %}

    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

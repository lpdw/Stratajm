{% extends '::base.html.twig' %}

{% block title %}Admin{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="container">
        <div class="row" style="margin-top:30vh;">
        	<div class="col-md-4 col-md-offset-4">
        		<div class="panel panel-default">
    			  	<div class="panel-heading">
    			    	<h3 class="panel-title">Connexion</h3>
    			 	</div>
    			  	<div class="panel-body">
    			    	<form action="{{ path('login') }}" method="post" accept-charset="UTF-8" role="form">
                        <fieldset>
    			    	  	<div class="form-group">
    			    		    <input class="form-control" id="username" placeholder="Username" name="_username" type="text" value="{{ last_username }}">
    			    		</div>
    			    		<div class="form-group">
    			    			<input class="form-control" id="password" placeholder="Password" name="_password" type="password" value="">
    			    		</div>
    			    		<input class="btn btn-lg btn-success btn-block" type="submit" value="Login">
    			    	</fieldset>
    			      	</form>
    			    </div>
    			</div>
    		</div>
    	</div>
    </div>
{% endblock %}

{% extends "AdminBundle::admin-layout.html.twig" %}

{% block content %}
    <h1>Exemplaire du jeu {{ copy.game.name }}</h1>

    <table>
        <tbody>
            <tr>
              <th>Référence</th>
              <th>Etat</th>
              <th>Emplacement</th>
            </tr>
            <tr>
              <td>{{ copy.reference }}</td>
              <td>{{ copy.status.name }}</td>
              <td>{{ copy.localisation.name }}</td>

            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_copy_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_copy_edit', { 'id': copy.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

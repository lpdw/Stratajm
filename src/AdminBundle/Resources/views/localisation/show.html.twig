{% extends "AdminBundle::admin-layout.html.twig" %}

{% block content %}
    <h1>Localisation</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ localisation.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ localisation.name }}</td>
            </tr>
            <tr>
                <th>Adress</th>
                <td>{{ localisation.adress }}</td>
            </tr>
            <tr>
                <th>Telnum</th>
                <td>{{ localisation.telNum }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_localisation_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_localisation_edit', { 'id': localisation.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

{% extends 'AdminBundle::admin-layout.html.twig' %}

{% block content %}
    <div class="row top-list">
        <div class="row">
            <h1>Liste des nombres de joueurs</h1>
        </div>
        <div class="row">
            <a href="{{ path('admin_players_new') }}"><button class="btn btn-primary pull-right"><span class="glyphicon glyphicon-plus"></span> Cr√©er un nouveau nombre de joueurs</button></a>
        </div>
    </div>

    <table class="table table-bordered table-responsive table-striped" id="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for player in players %}
            <tr>
                <td>{{ player.name }}</td>
                <td>
                    <a href="{{ path('admin_players_show', { 'id': player.id }) }}"><input type='button' class='btn btn-default' value='Voir'></a>
                    <a href="{{ path('admin_players_edit', { 'id': player.id }) }}"><input type='button' class='btn btn-default' value='Modifier'></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

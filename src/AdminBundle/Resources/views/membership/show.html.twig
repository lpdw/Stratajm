{% extends "AdminBundle::admin-layout.html.twig" %}

{% block content %}
    <div class="row top">
        <h1>Adhésion</h1>
    </div>
    <div class="row col-sm-offset-3 col-sm-6 col-lg-offset-3 col-lg-6 show">
        <table class="table table-responsive table-striped">
            <tr>
                <th>Membre</th>
                <td>{{ membership.member.firstname }} {{ membership.member.lastname }}</td>
            </tr>
            <tr>
                <th>Date de début</th>
                <td>{{ membership.beginDate|date('d/m/Y') }}</td>
            </tr>
            <tr>
                <th>Montant</th>
                <td>{{ membership.amount }}€</td>
            </tr>
            <tr>
                <th>Moyen de paiement</th>
                <td>{{ membership.paymentMethod.name }}</td>
            </tr>
        </table>
    </div>

    <div class="row col-sm-offset-3 col-sm-6 col-lg-offset-3 col-lg-6 show">
        <a href="{{ path('admin_membership_index') }}"><button type="button" class="btn btn-primary">Retour à la liste</button></a>
        <a href="{{ path('admin_membership_edit', { 'id': membership.id }) }}"><button type="button" class="btn btn-success">Modifier</button></a>
        {{ form_start(delete_form) }}
            <input type="submit" class="btn btn-danger" value="Supprimer">
        {{ form_end(delete_form) }}
    </div>
{% endblock %}

{% extends "AdminBundle::admin-layout.html.twig" %}

{% block content %}
    <div class="row top-list">
        <div class="row">
            <h1 class="col-lg-4 col-sm-4">Liste des adhésions</h1>
        </div>
        <div class="row">
            <a href="{{ path('admin_membership_new') }}"><button class="btn btn-primary pull-right"><span class="glyphicon glyphicon-plus"></span> Déclarer une nouvelle adhésion</button></a>
        </div>
    </div>

    <table class="table table-bordered table-responsive table-striped" id="table">
        <thead>
            <tr>
                <th>Montant</th>
                <th>Date de début</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for membership in memberships %}
            <tr>
                <td>{{ membership.amount }}€</td>
                <td>{% if membership.beginDate %}{{ membership.beginDate|date('d/m/Y') }}{% endif %}</td>
                <td>
                    <a href="{{ path('admin_membership_show', { 'id': membership.id }) }}"><input type='button' class='btn btn-default' value='Voir'></a>
                    <a href="{{ path('admin_membership_edit', { 'id': membership.id }) }}"><input type='button' class='btn btn-default' value='Modifier'></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

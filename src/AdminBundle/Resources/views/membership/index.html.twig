{% extends "AdminBundle::admin-layout.html.twig" %}

{% block content %}
    <h1>Memberships list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Amount</th>
                <th>Begindate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for membership in memberships %}
            <tr>
                <td><a href="{{ path('admin_membership_show', { 'id': membership.id }) }}">{{ membership.id }}</a></td>
                <td>{{ membership.amount }}</td>
                <td>{% if membership.beginDate %}{{ membership.beginDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_membership_show', { 'id': membership.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_membership_edit', { 'id': membership.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_membership_new') }}">Create a new membership</a>
        </li>
    </ul>
{% endblock %}
